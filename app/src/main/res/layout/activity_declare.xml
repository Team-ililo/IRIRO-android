<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Declare">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:src="@tools:sample/avatars"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_left_24" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/inter_semibold"
        android:text="신고하기"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_declare_num_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/inter_semibold"
        android:textSize="16sp"
        android:text="신고 대상"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <EditText
        android:id="@+id/tv_declare_num"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="#FFF8FAFC"
        android:fontFamily="@font/inter_regular"
        android:paddingLeft="15dp"
        android:hint="차량 번호 뒤 4자리를 입력해주세요"
        android:textColor="@color/black"
        android:textColorHint="#FF404B52"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_declare_num_title" />

    <TextView
        android:id="@+id/tv_declare_reason_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter_semibold"
        android:text="신고 사유"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_declare_num_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_declare_num" />

    <EditText
        android:id="@+id/tv_declare_reason"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="#FFF8FAFC"
        android:fontFamily="@font/inter_regular"
        android:hint="신고 사유를 작성해주세요"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:gravity="top|left"
        android:textColor="@color/black"
        android:textColorHint="#FF404B52"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_declare_num"
        app:layout_constraintStart_toStartOf="@+id/tv_declare_num"
        app:layout_constraintTop_toBottomOf="@+id/tv_declare_reason_title" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@drawable/background_blue"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_regular"
        android:text="완료하기"
        app:layout_constraintEnd_toEndOf="@+id/tv_declare_reason"
        app:layout_constraintStart_toStartOf="@+id/tv_declare_reason"
        app:layout_constraintTop_toBottomOf="@+id/tv_declare_reason" />


</androidx.constraintlayout.widget.ConstraintLayout>